@model IEnumerable<CrudEstadoCidadeCliente.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<div class="container mt-4">
    <h1>Lista de Cliente</h1>

    <p>
        <a asp-action="Create" class="btn btn-success">Novo Cliente</a>
    </p>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nome</th>
                <th>Idade</th>
                <th>Sex</th>
                <th>DataNasc</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>R$ @item.Idade.ToString("F2")</td>
                    <td>R$ @item.sex</td>
                    <td>R$ @item.DataNasc.ToString("F2")</td>
                    <td>@item.Cidade?.CidadeNome</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ClienteId" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.ClienteId" class="btn btn-sm btn-info">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.ClienteId" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
