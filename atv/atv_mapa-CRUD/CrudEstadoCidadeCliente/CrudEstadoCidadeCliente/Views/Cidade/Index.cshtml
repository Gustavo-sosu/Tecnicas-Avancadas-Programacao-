@model IEnumerable<CrudEstadoCidadeCliente.Models.Cidade>

@{
    ViewData["Title"] = "Cidades";
}

<div class="container mt-4">
    <h1>Lista de Cidades</h1>

    <p>
        <a asp-action="Create" class="btn btn-success">Nova Cidade</a>
    </p>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nome</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CidadeNome</td>
                    <td>@item.Estado?.EstadoSigla</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CidadeId" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.CidadeId" class="btn btn-sm btn-info">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.CidadeId" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
